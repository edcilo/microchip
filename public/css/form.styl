.form
    accept_true = greenEdc1
    accept_false = redEdc1
    b_color = grayEdc2
    bo_fieldset = grayConcrete
    color = blackEdc1
    i_b_bolor = whiteEdc1
    i_bo_color = graySilver
    i_radio = 3px
    radio = 6px

    b_sub_color = greenEdc1
    b_res_color = redEdc1
    bu_color = whiteEdc1

    padding 1px

    fieldset
        border 1px solid bo_fieldset
        border-radius radio
        margin-bottom 7px

    input
        max-width 100%
        &[type="submit"]
            button(b_sub_color, bu_color)
            height 29px

        &[type="reset"]
            button(b_res_color, bu_color)
            height 29px

        &[type="file"]
            border 1px solid transparent
            height 29px
            padding 2px;
            width 200px

