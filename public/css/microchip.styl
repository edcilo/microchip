sprite = 'img/sprite.png'

@import "normalize.styl"
@import "cont.styl"
@import "cols.styl"
@import "colors.styl"
@import "fonts.styl"
@import "mixins.styl"
@import "animations.styl"
@import "class.styl"
@import "form.styl"
@import "header.styl"
@import "jqueryUI.styl"

header = #213338
c_logo = #92B84A

::-moz-selection
	background lighten(greenEdc1, 50%)
	text-shadow none
::selection
	background lighten(greenEdc1, 50%)
	text-shadow none

body
	background whiteEdc1
	color blackEdc1

footer
	bottom 0
	box-shadow none
	color white
	position fixed
	width 100%
	.subtitle
		font-size .75em
		margin .5em
		text-align center

h1,
h2,
h3,
h4,
h5,
h6
	margin-bottom 7px
	margin-top 0

header
	gradientLinear header, darken(header, 12%)
	border-bottom-color c_logo

hr
	border none
	border-bottom 1px solid grayConcrete


.bg-margin-top
	margin-top 4rem

.color-success
	color greenEdc1
.color-danger
	color redEdc1

.cont-form-search
	.resultSearch
		position absolute
		width 350px
		z-index 9
		div
			border-radius 2px
			margin-bottom 1px
			a
			span
				background lighten(greenEdc1, 60%)
				color blackEdc1
				display block
				padding 3px
				text-decoration none
				&:hover
					background lighten(greenEdc1, 80%)

.cont-form-search-2
	.resultSearch
		div
			border-radius 2px
			margin-bottom 1px
			a
			span
				background lighten(greenEdc1, 60%)
				color blackEdc1
				display block
				padding 3px
				text-decoration none
				&:hover
					background lighten(greenEdc1, 80%)

.cont_principal
	padding 7px

.subtitle_mark
	background lighten(greenEdc1, 60%)
	border-radius 3px
	margin 7px 0
	padding 3px 49px 3px 6px

.description-product
	display relative
	margin 7px 0
	z-index 0
	figure
		img
			border 4px solid greenEdc1
			border-radius 6px
			display block
			height auto
			width 100%
	.subtitle
		background lighten(greenEdc1, 60%)
		border-radius 3px
		margin 0 0 7px
		padding 3px 49px 3px 6px
		position relative
		h2
			font-size 16px
			margin 3px 0 4px
		.btn-close
			background greenEdc1
			border 1px solid darken(greenEdc1, 60%)
			border-radius 50%
			color whiteEdc1
			height 20px
			line-height 1
			padding 0
			position absolute
			right 2px
			width 20px
			&:hover
				background darken(greenEdc1, 30%)
			&:focus
				outline none

	.header
		background greenEdc1
		border-radius 3px 3px 0 0
		color whiteEdc1
		margin 0 0 14px
		padding 7px 49px 7px 7px
		position relative
		a
			position absolute
			right 0
			top 7px
		h1
			font-size 21px
			margin 0
	ul
		list-style none
		margin 0
		padding-left 0
		li
			margin 7px 0
			ul
				padding-left 7px*6

	.block2
		border-radius 6px
		box-shadow 0 0 6px 0 rgba(blackEdc1, .2) inset
		padding 7px
		position relative
		margin 0 0 7px
		/*
		.btn-blue
		.btn-green
		.btn-yellow
		.btn-red
			position absolute
			right 4px
		*/

	.row
		margin .5em 0

.float-right
	position absolute
	right 14px

.inputs-order
	.row
		label
			display inline-block
			text-align right
			width 50%

.inline
	display inline-block
	vertical-align top

.mini-block
	border-radius 6px
	box-shadow 0 -6px 6px 0 rgba(blackEdc1, .1) inset
	height 225px
	overflow hidden
	position relative

.msgs
	background yellowSunFlower
	display block
	line-height 2
	position absolute
	text-align center
	width 100%
	z-index 1

.msg_dialog
	background redAlizarin
	border-radius 3px
	color whiteEdc1
	padding 3px 7px
	margin-bottom 4px
	&.success
		background greenEdc1
	&.alert
		background yellowSunFlower
	&.error
		background redAlizarin

.nav-v
	background whiteEdc1
	border-right 1px solid grayConcrete
	padding 15px

	ul
		padding 0
		margin 0
		li
			background grayEdc1
			border 1px solid darken(grayEdc1, 10%)
			padding 0
			a
				color blackEdc1
				display inline-block
				padding .25em
				width 92%
				&:hover
					text-decoration none
			.fa
				cursor pointer
				display inline-block
				padding .25em 0
				text-align center
				width 6%
		ul
			margin 0
			li
				background whiteEdc1
				border none
				border-bottom 1px solid lighten(c_logo, 10%)
				padding .125em
				&:hover,
				&:hover > a
					background lighten(c_logo, 80%)
				a
					background whiteEdc1
					border none
					border-left 2px solid c_logo
					display block
					padding .5em
			ul
				display none
				padding-left .75em

.rows-table
	.tr
		display inline-block
		overflow hidden
		vertical-align top
		width 100%

		border-bottom 1px solid grayConcrete
		padding 4px 0
	.red
		background rgba(redAlizarin, 0.25)
		border-bottom 1px solid redAlizarin
		color darken(redAlizarin, 50%)
	.yellow
		background rgba(yellowSunFlower, .25)
		border-bottom 1px solid yellowSunFlower
		color darken(yellowSunFlower, 60%)
	.green
		background rgba(greenEdc1, .25)
		border-bottom 1px solid greenEdc1
		color darken(greenEdc1, 60%)
	.blue
		background rgba(blueEdc1, .25)
		border-bottom 1px solid blueEdc1
		color darken(blueEdc1, 50%)

.table
	tbody
		tr
			&.red
				background rgba(redAlizarin, 0.25)
				border-bottom 1px solid redAlizarin
				color darken(redAlizarin, 40%)
			&.yellow
				background rgba(yellowSunFlower, .75)
				border-bottom 1px solid yellowSunFlower
				color darken(yellowSunFlower, 40%)
			&.green
				background rgba(greenEdc1, .75)
				border-bottom 1px solid greenEdc1
				color darken(greenEdc1, 40%)
			&.blue
				background rgba(blueEdc1, .75)
				border-bottom 1px solid blueEdc1
				color darken(blueEdc1, 40%)
	td
		padding 4px .5em
		vertical-align top
		ul
			margin 0
			padding 0 7px
			li
				list-style none
				margin-top 0
	img
		width 30px
	.strong
		background darken(grayEdc1, 6%)
	.btn-blue
	.btn-green
	.btn-red
	.btn-yellow
		margin 0

.text-red
	color redEdc1
.text-green
	color greenEdc1

.title-clear
	color grayConcrete
	font-size 2em
	margin 1em 0
	text-align center

.top
	position absolute
	top 6px

.window
	background whiteEdc1
	border-radius 6px
	box-shadow 0 0 6px 0 rgba(blackEdc1, .6)
	display none
	padding 7px
	position absolute
	top 20px
	width 600px
	z-index 99999

#big-table
	overflow hidden
	position relative
	width 100%

#col-izq
#col-der
	overflow hidden
	position relative

#result-search
	position absolute
	width 600px

#chequeDesign
	color = lighten(#de142e, 30%)
	color_fonto = lighten(#7b7076, 95%)
	ancho_cheque = 680px
	alto_cheque = 287px
	border 1px solid color
	border-radius 3px
	display block
	font-size 12px
	height alto_cheque
	margin auto
	position relative
	width ancho_cheque
	img
		position relative
		height auto
		width 100%
	.cont_text
		background rgba(whiteEdc1, .4)
		border 1px solid rgba(blackEdc1, .8)
		padding .25em .5em
		position absolute
		left -100px
		top -100px
	#cont_payment
		font-size 12px

.table-div
	.thead
		border-bottom 2px solid rgba(blackEdc1, .8)
	.tbody
		.row
			padding 4px
