	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments

button(b_color=whiteEdc1, t_color=blackEdc1, padding=.25em 1em, m_size= 0 .25em)
	border 1px solid darken(b_color, 20%)
	border-radius 3px
	color t_color
	cursor pointer
	display inline-block
	gradientLinear b_color darken(b_color, 2%)
	height 29px
	line-height inherit
	margin m_size
	outline none
	padding padding
	text-decoration none
	transition b_color .2s, box-shadow .2s
	vertical-align bottom
	&:focus
		outline none
	&:hover,
	&:focus
		border-bottom-color darken(b_color, 30%)
		box-shadow 0 -1px 0 darken(b_color, 30%) inset
		color t_color
		gradientLinear lighten(b_color, 2%) b_color
		text-decoration none
	&:active
		border-top-color darken(b_color, 40%)
		gradientLinear darken(b_color, 6%) darken(b_color, 4%)
		box-shadow 0 1px 2px darken(b_color, 40%) inset

button-metro(b_color=whiteEdc1, t_color=blackEdc1, p_size=.75em 2em, m_size=7px, radio=2px)
	border 1px solid darken(b_color, 8%)
	border-radius radio
	color t_color
	cursor pointer
	display inline-block
	gradientLinear b_color darken(b_color, 4%)
	line-height 1
	margin m_size
	padding p_size
	text-decoration none
	&:focus
		box-shadow 0 0 3px 0 b_color
		outline none
	&:hover,
	&:focus
		border 1px solid darken(b_color, 20%)
		color t_color
		gradientLinear darken(b_color, 6%) darken(b_color, 10%)
		text-decoration none
	&:active
		box-shadow 0 2px 8px 0 darken(b_color, 70%) inset

gradientLinear(color1=white, color2=darken(white, 2%), alineacion=top )
	background-color color1 // Old browsers
	background -moz-linear-gradient(alineacion, color1 0%, color2 100%) // FF3.6+
	background -webkit-gradient(linear, left top, left bottom, color-stop(0%,color1), color-stop(100%,color2)) // Chrome,Safari4+
	background -webkit-linear-gradient(alineacion, color1 0%, color2 100%) // Chrome10+,Safari5.1+
	background -o-linear-gradient(alineacion, color1 0%, color2 100%) // Opera 11.10+
	background -ms-linear-gradient(alineacion, color1 0%, color2 100%) // IE10+
	background linear-gradient(alineacion, color1 0%, color2 100%) // W3C

transition ()
	-webkit-transition arguments
	-moz-transition arguments
